/* pages/second/second.wxss */
page {
	width: 100%;
	height: 100%;
	overflow: hidden;
}

.scene {
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: column;
}

.scene-editor {
	flex: 1;
	height: 100rpx;
	width: 100%;
	background-color: rgb(223, 120, 120);
	display: flex;
	align-items: center; /* 竖直居中 */
	justify-content: center; /* 水平居中 */
}
.scene-editor-main {
	width: 100%;
	height: 100%;
}
.scene-template {
	flex: 0 0 180rpx;
	height: 180rpx;
	width: 100%;
	background-color: rgb(97, 155, 241);
}
.scene-item {
  height: 180rpx;
  margin: 0 10rpx;
}
.scene-item-active {
	background-color: gray;
	outline: 2px dotted yellow;
}
.scene-item-cover {
  width: 100%;
  height: 100%;
}
.scene-save {
	flex: 0 0 90rpx;
	margin: 10rpx;
}